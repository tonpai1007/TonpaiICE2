# Google Sheets Configuration
SHEET_ID=your_google_sheet_id_here
GOOGLE_APPLICATION_CREDENTIALS_BASE64=your_base64_encoded_credentials

# LINE Bot Configuration
LINE_TOKEN=your_line_channel_access_token
LINE_SECRET=your_line_channel_secret

# Admin Users (comma-separated LINE User IDs)
ADMIN_USER_IDS=U1234567890abc,U0987654321def

# AI Provider: groq | ollama | openrouter
AI_PROVIDER=groq

# Groq API (if using groq)
GROQ_API_KEY=gsk_your_groq_api_key

# Ollama (if using ollama)
OLLAMA_BASE_URL=
OLLAMA_MODEL=

# OpenRouter (if using openrouter)
OPENROUTER_API_KEY=your_openrouter_key

# Server Configuration
PORT=3000
NODE_ENV=production
LOG_LEVEL=info